@page
@model Migrante.App.Frontend.Pages.RegistrarMigranteModel
@{
}

<div class="container w-50">
    <form action="">

        <div class="mb-3">
            <label for="nombres" class="form-label">Nombres</label>
            <input type="text" class="form-control w-50" id="nombres" placeholder="Ingrese su nombre">
        </div>

        <div class="mb-3">
            <label for="apellidos" class="form-label">Apellidos</label>
            <input type="text" class="form-control w-50" id="apellidos" placeholder="Ingrese sus apellidos">
        </div>

        <div class="mb-3">
            <label for="tipoID" class="form-label">Tipo de documento de identificación</label>
            <select class="form-select w-25" id="tipoID">
                <option selected>Selecionar...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="pais" class="form-label">País de Origen</label>
            <select class="form-select w-25" id="pais">
                <option selected>Selecionar...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="apellidos" class="form-label">Fecha de Nacimiento</label>
            <input type="date" class="form-control w-25" id="apellidos" placeholder="Ingrese sus apellidos">
        </div>

        <div class="mb-3">
            <label for="correo" class="form-label">Dirrección Electrónica</label>
            <input type="text" class="form-control w-50" id="correo" placeholder="Ingrese su dirección electrónica">
        </div>

        <div class="mb-3">
            <label for="numero" class="form-label">Numero de teléfono</label>
            <input type="text" class="form-control w-50" id="numero" placeholder="Ingrese su numero de teléfono">
        </div>

        <div class="mb-5">
            <label for="pais" class="form-label">Situación Laboral</label>
            <select class="form-select w-25" id="pais">
                <option selected>Selecionar...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>

        <button type="button" class="btn btn-success mb-5">Guardar</button>
        <button type="button" class="btn btn-danger mb-5">Cancelar</button>

    </form>
</div>
